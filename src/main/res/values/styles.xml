<resources>
    <!-- Base application theme. -->
    <style name="AladdinAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="CommonDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="akBottomDialog" parent="CommonDialog">
        <item name="android:windowAnimationStyle">@style/BottomInOutAnim</item>
    </style>

    <style name="BottomInOutAnim">
        <item name="android:windowEnterAnimation">@anim/ak_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/ak_slide_out_bottom</item>
    </style>

</resources>